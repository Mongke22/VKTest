<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VKTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="vkCustomClocksStyle">@style/ColoredClocksHands</item>
        <item name="vkCustomClocksGroupStyle">@style/ColoredClocksGroupHands</item>
    </style>

    <style name="DefaultVKClocksStyle">
        <item name="secondHandColor">@color/black</item>
        <item name="secondHandWidth">20</item>
        <item name="secondHandLength">80</item>

        <item name="minuteHandColor">@color/black</item>
        <item name="minuteHandWidth">30</item>
        <item name="minuteHandLength">40</item>

        <item name="hourHandColor">@color/black</item>
        <item name="hourHandWidth">40</item>
        <item name="hourHandLength">20</item>

        <item name="delimiterColor">@color/black</item>
        <item name="delimiterSize">20</item>

        <item name="numberColor">@color/black</item>
        <item name="numberSize">70</item>
        <item name="numberWidth">30</item>

        <item name="circleBackgroundColor">@color/lightGrey</item>
        <item name="circleColor">@color/black</item>
        <item name="circleSize">12</item>
    </style>

    <style name="DefaultVKClocksGroupStyle">
        <item name="secondsHandColor">@color/black</item>
        <item name="secondsHandWidth">20</item>
        <item name="secondsHandLength">80</item>

        <item name="minutesHandColor">@color/black</item>
        <item name="minutesHandWidth">30</item>
        <item name="minutesHandLength">40</item>

        <item name="hoursHandColor">@color/black</item>
        <item name="hoursHandWidth">40</item>
        <item name="hoursHandLength">20</item>

        <item name="delimitersColor">@color/black</item>
        <item name="delimitersSize">20</item>

        <item name="numbersColor">@color/black</item>
        <item name="numbersSize">70</item>
        <item name="numbersWidth">30</item>

        <item name="circlesBackgroundColor">@color/lightGrey</item>
        <item name="circlesColor">@color/black</item>
        <item name="circlesSize">12</item>
    </style>

    <style name="ColoredClocksHands" parent="DefaultVKClocksStyle">
        <item name="secondHandColor">@color/red</item>
        <item name="minuteHandColor">@color/lightBlue</item>
        <item name="hourHandColor">@color/green</item>
    </style>
    <style name="ColoredClocksGroupHands" parent="DefaultVKClocksGroupStyle">
        <item name="secondsHandColor">@color/red</item>
        <item name="minutesHandColor">@color/lightBlue</item>
        <item name="hoursHandColor">@color/green</item>
    </style>

</resources>