<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VKTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="vkCustomClocksGroupStyle">@style/ColoredClocksGroupHands</item>
    </style>

    <style name="DefaultVKClocksGroupStyle">
        <item name="secondsHandColor">@color/black</item>
        <item name="secondsHandWidth">@integer/defaultSecondsHandWidth</item>
        <item name="secondsHandLength">@integer/defaultSecondsHandLength</item>

        <item name="minutesHandColor">@color/black</item>
        <item name="minutesHandWidth">@integer/defaultMinutesHandWidth</item>
        <item name="minutesHandLength">@integer/defaultMinutesHandLength</item>

        <item name="hoursHandColor">@color/black</item>
        <item name="hoursHandWidth">@integer/defaultHoursHandWidth</item>
        <item name="hoursHandLength">@integer/defaultHoursHandLength</item>

        <item name="delimitersColor">@color/black</item>
        <item name="delimitersSize">@integer/defaultDelimiterSize</item>

        <item name="numbersColor">@color/black</item>
        <item name="numbersSize">@integer/defaultNumberSize</item>
        <item name="numbersWidth">@integer/defaultNumberWidth</item>

        <item name="circlesBackgroundColor">@color/lightGrey</item>
        <item name="circlesColor">@color/black</item>
        <item name="circlesSize">@integer/defaultCircleSize</item>
    </style>
    <style name="ColoredClocksGroupHands" parent="DefaultVKClocksGroupStyle">
        <item name="secondsHandColor">@color/red</item>
        <item name="minutesHandColor">@color/lightBlue</item>
        <item name="hoursHandColor">@color/green</item>
    </style>

</resources>